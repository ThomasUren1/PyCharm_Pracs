BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '10'
            id: m_input
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            anchor: 'right'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert m to km'
        on_press: app.convert_m_to_km()
    Label:
        id: km_label
        text: '16.0934'
        color: (1, 1, 0, 1)